<div class="card col-md-6 mx-auto mt-4">
  <div class="card-header">
    <h1 class="h4 mb-0"><%= t('feedback.new.title') %></h1>
  </div>
  
  <div class="card-body">
    <%= form_with model: @feedback, url: feedbacks_path, local: true do |f| %>
      <% if @feedback.errors.any? %>
        <div class="alert alert-danger">
          <h2 class="h6"><%= t('feedback.new.errors_header') %></h2>
          <ul>
            <% @feedback.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_group_with_error(f, :name) %>
      <%= form_group_with_error(f, :email, type: :email) %>
      <%= form_group_with_error(f, :message, as: :text_area, rows: 5) %>

      <div class="d-grid">
        <%= f.submit t('feedback.new.send'), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  
  <div class="card-footer text-center">
    <%= link_to t('feedback.new.back'), root_path, class: "btn btn-outline-secondary" %>
  </div>
</div> 