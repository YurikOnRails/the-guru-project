<tr>
  <td>
    <%= content_tag :span, test.title, class: "test-title" %>
    <% if test.questions.empty? %>
      <span class="badge bg-warning text-dark ms-2">
        <i class="bi bi-exclamation-triangle me-1"></i>
        <%= t('.no_questions') %>
      </span>
    <% end %>
  </td>
  <td><%= test_level(test) %></td>
  <td><%= test.category.name %></td>
  <td><%= test.questions.count %></td>
  <td>
    <%= form_with(model: [:admin, test], class: "d-flex align-items-center gap-2", data: { controller: "form-submission" }) do |f| %>
      <div class="input-group input-group-sm" style="width: 150px;">
        <%= f.number_field :timer_minutes,
                          class: "form-control",
                          min: 0,
                          placeholder: "Без ограничений",
                          data: { action: "change->form-submission#submit" } %>
        <span class="input-group-text">мин</span>
      </div>
    <% end %>
  </td>
  <td class="text-end">
    <div class="btn-group" role="group">
      <%= link_to t('.show'), admin_test_path(test),
                  class: "btn btn-sm btn-outline-primary",
                  data: { bs_toggle: "tooltip" },
                  title: t('.show_tooltip') %>
                  
      <%= link_to t('.edit'), edit_admin_test_path(test),
                  class: "btn btn-sm btn-outline-success",
                  data: { bs_toggle: "tooltip" },
                  title: t('.edit_tooltip') %>
                  
      <%= button_to t('.delete'), admin_test_path(test),
                    method: :delete,
                    class: "btn btn-sm btn-outline-danger",
                    data: { 
                      bs_toggle: "tooltip",
                      turbo_confirm: t('.confirm_deletion')
                    },
                    title: t('.delete_tooltip'),
                    form: { class: "d-inline-block" } %>
    </div>
  </td>
</tr> 
