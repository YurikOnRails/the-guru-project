<div class="row justify-content-center mt-3">
  <div class="col-12 col-md-6">
    <h2><%= form_header(@test) %></h2>

    <%= form_with model: [:admin, @test], local: true do |form| %>
      <%= render 'shared/errors', resource: @test %>

      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :level %>
        <%= form.number_field :level, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :timer_minutes, 'Timer (minutes)' %>
        <%= form.number_field :timer_minutes, class: 'form-control', min: 1 %>
        <small class="form-text text-muted">Leave blank for no time limit</small>
      </div>

      <div class="form-group">
        <%= form.label :category_id %>
        <%= form.collection_select :category_id,
                                 Category.all,
                                 :id,
                                 :title,
                                 { prompt: 'Select category' },
                                 { class: 'form-control' } %>
      </div>

      <div class="form-group">
        <%= form.submit class: 'btn btn-primary' %>
        <%= link_to 'Back', admin_tests_path, class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
