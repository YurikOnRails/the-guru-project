<tr>
  <td><strong><%= test.title %></strong></td>
  <td><span class="badge bg-<%= test.level > 2 ? 'danger' : (test.level > 0 ? 'warning' : 'success') %>"><%= test.level %></span></td>
  <td><span class="badge bg-info text-dark"><%= test.category.name %></span></td>
  <td><span class="badge bg-secondary"><%= test.questions.count %></span></td>
  <td>
    <div class="d-flex justify-content-center">
      <%= link_to admin_test_path(test), class: 'btn btn-sm btn-outline-primary me-1' do %>
        <i class="bi bi-eye me-1"></i><%= t('.show') %>
      <% end %>
      
      <%= link_to edit_admin_test_path(test), class: 'btn btn-sm btn-outline-success me-1' do %>
        <i class="bi bi-pencil me-1"></i><%= t('.edit') %>
      <% end %>
      
      <%= button_to admin_test_path(test), 
                  method: :delete, 
                  form: { data: { turbo_confirm: t('.confirm') } },
                  class: 'btn btn-sm btn-outline-danger' do %>
        <i class="bi bi-trash me-1"></i><%= t('.delete') %>
      <% end %>
    </div>
  </td>
</tr>
