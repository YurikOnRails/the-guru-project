<h1><%= t('.header') %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('.question') %></th>
      <th><%= t('.gist_url') %></th>
      <th><%= t(".user") %></th>
      <th><%= t(".created_at") %></th>
    </tr>
  </thead>
  <tbody>
    <% @gists.each do |gist| %>
      <tr>
        <td>
          <%= link_to truncate(gist.question.content, length: 25),
                      admin_question_path(gist.question) %>
        </td>
        <td>
          <%= link_to gist.hash_id, gist.url, target: "_blank" %>
        </td>
        <td><%= gist.user.email %></td>
        <td><%= gist.created_at.strftime("%d.%m.%Y %H:%M") %></td>
      </tr>
    <% end %>
  </tbody>
</table> 
