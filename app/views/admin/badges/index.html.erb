<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Управление бейджами</h1>
    <%= link_to 'Создать новый бейдж', new_admin_badge_path, class: 'btn btn-primary' %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Изображение</th>
          <th>Название</th>
          <th>Описание</th>
          <th>Правило</th>
          <th>Действия</th>
        </tr>
      </thead>
      <tbody>
        <% @badges.each do |badge| %>
          <tr>
            <td>
              <img src="<%= badge.image_url %>" alt="<%= badge.title %>" style="width: 50px; height: 50px;">
            </td>
            <td><%= badge.title %></td>
            <td><%= badge.description %></td>
            <td><%= Badge::RULES[badge.rule_type] %></td>
            <td>
              <div class="btn-group">
                <%= link_to 'Просмотр', admin_badge_path(badge), class: 'btn btn-sm btn-info' %>
                <%= link_to 'Редактировать', edit_admin_badge_path(badge), class: 'btn btn-sm btn-warning' %>
                <%= button_to 'Удалить', 
                    admin_badge_path(badge), 
                    method: :delete, 
                    class: 'btn btn-sm btn-danger',
                    data: { turbo_confirm: 'Вы уверены?' } %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div> 