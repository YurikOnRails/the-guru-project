<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Управление бейджами</h1>
    <%= link_to new_admin_badge_path, class: 'btn btn-primary' do %>
      <i class="bi bi-plus-lg"></i> Создать бейдж
    <% end %>
  </div>

  <div class="card shadow-sm">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th>Изображение</th>
            <th>Название</th>
            <th>Тип правила</th>
            <th>Значение правила</th>
            <th>Действия</th>
          </tr>
        </thead>
        <tbody>
          <% @badges.each do |badge| %>
            <tr>
              <td>
                <img src="<%= badge.image_url %>" alt="<%= badge.name %>" style="height: 50px; width: 50px; object-fit: contain;">
              </td>
              <td><%= badge.name %></td>
              <td><%= Badge::RULE_TYPES[badge.rule_type.to_sym] %></td>
              <td><%= badge.rule_value %></td>
              <td>
                <div class="d-flex justify-content-center">
                  <%= link_to admin_badge_path(badge), class: 'btn btn-sm btn-outline-primary me-1' do %>
                    <i class="bi bi-eye me-1"></i>Просмотр
                  <% end %>
                  <%= link_to edit_admin_badge_path(badge), class: 'btn btn-sm btn-outline-success me-1' do %>
                    <i class="bi bi-pencil me-1"></i>Редактировать
                  <% end %>
                  <%= button_to admin_badge_path(badge), method: :delete, form: { data: { turbo_confirm: 'Вы уверены?' } }, class: 'btn btn-sm btn-outline-danger' do %>
                    <i class="bi bi-trash me-1"></i>Удалить
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div> 