<%= form_with(model: [:admin, @badge], local: true, class: 'mb-4') do |f| %>
  <% if @badge.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading">
        Обнаружено <%= @badge.errors.count %> ошибок:
      </h4>
      <ul class="mb-0">
        <% @badge.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, 'Название', class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :image_url, 'URL изображения', class: 'form-label' %>
    <%= f.text_field :image_url, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :rule_type, 'Тип правила', class: 'form-label' %>
    <%= f.select :rule_type, 
        Badge::RULE_TYPES,
        {},
        class: 'form-select' %>
  </div>

  <div class="mb-3">
    <%= f.label :rule_value, 'Значение правила', class: 'form-label' %>
    <%= f.text_field :rule_value, class: 'form-control' %>
  </div>

  <div class="d-flex justify-content-end gap-2">
    <%= link_to 'Назад', admin_badges_path, class: 'btn btn-secondary' %>
    <%= f.submit @badge.new_record? ? 'Создать бейдж' : 'Обновить бейдж',
        class: 'btn btn-primary' %>
  </div>
<% end %> 