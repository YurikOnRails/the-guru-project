<nav class="navbar navbar-light bg-light mb-3 py-2" style="min-height: 48px;">
  <div class="container px-2">
    <%= link_to root_path, class: 'navbar-brand d-flex align-items-center gap-2 py-0' do %>
      <span class="text-primary fw-bold" style="font-size: 1.1rem; text-transform: uppercase; letter-spacing: 1px; text-shadow: 2px 2px 4px rgba(0,0,0,0.1);">
        <i class="bi bi-mortarboard-fill me-1 small"></i><%= t('admin.nav.title') %>
      </span>
    <% end %>
    <ul class="navbar-nav flex-row ms-4 me-auto gap-1 align-items-center" style="font-size: 0.97rem;">
      <li class="nav-item">
        <%= link_to t('shared.nav.tests'), tests_path, class: 'nav-link px-2 py-1' %>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to badges_path, class: 'nav-link px-2 py-1' do %>
            <i class="bi bi-award me-1 small"></i>Ваши бейджи
          <% end %>
        </li>
      <% end %>
      <li class="nav-item">
        <%= link_to t('shared.nav.feedback'), new_feedback_path, class: 'nav-link px-2 py-1' %>
      </li>
      <li class="nav-item">
        <%= link_to t('shared.nav.about'), '/about/author.html', class: 'nav-link px-2 py-1', target: '_blank' %>
      </li>
    </ul>
    <div class="navbar-nav flex-row align-items-center gap-1 ms-auto">
      <% if user_signed_in? %>
        <span class="nav-item nav-link px-2 py-1" style="font-size: 0.97rem;"><%= t('admin.nav.welcome') %>, <b><%= current_user.email %></b></span>
        <% if current_user&.admin? %>
          <li class="nav-item">
            <%= link_to admin_tests_path, class: 'nav-link text-primary fw-bold px-2 py-1' do %>
              <i class="bi bi-speedometer2 me-1 small"></i><%= t('shared.nav.admin_panel') %>
            <% end %>
          </li>
        <% end %>
        <%= button_to t('shared.nav.logout'), destroy_user_session_path, method: :delete, class: 'btn btn-outline-danger btn-sm ms-1 px-2 py-1' %>
      <% else %>
        <%= link_to new_user_registration_path, class: 'btn btn-primary btn-sm me-1 px-2 py-1 rounded-pill shadow-sm' do %>
          <i class="bi bi-person-plus-fill me-1 small"></i><%= t('shared.nav.signup') %>
        <% end %>
        <%= link_to new_user_session_path, class: "btn btn-outline-primary btn-sm px-2 py-1 rounded-pill shadow-sm" do %>
          <i class="bi bi-box-arrow-in-right me-1 small"></i><%= t("shared.nav.login") %>
        <% end %>
      <% end %>
    </div>
  </div>
