        <li class="nav-item">
          <%= link_to t('shared.nav.feedback'), new_feedback_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to t('shared.nav.about'), '/about/author.html', class: 'nav-link', target: '_blank' %>
