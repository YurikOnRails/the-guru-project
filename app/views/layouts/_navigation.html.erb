<nav class="nav">
  <%= link_to t('admin.nav.title'), root_path, class: 'nav-brand' %>

  <div class="nav-right">
    <% if user_signed_in? %>
      <span class="nav-item"><%= t('admin.nav.welcome') %>, <b><%= current_user.email %></b> Guru</span>
      <%= button_to t('shared.nav.logout'), destroy_user_session_path, method: :delete, class: 'btn btn-outline-danger btn-sm' %>
    <% else %>
      <%= link_to t('shared.nav.signup'), new_user_registration_path, class: 'btn btn-outline-primary btn-sm' %>
      <%= link_to t('shared.nav.login'), new_user_session_path, class: 'btn btn-outline-success btn-sm' %>
    <% end %>
  </div>
</nav>

<% flash.each do |key, message| %>
  <div class="alert alert-<%= key == 'notice' ? 'success' : 'danger' %>">
    <%= message %>
  </div>
<% end %> 