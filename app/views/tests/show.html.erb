<p>
  <strong>Title:</strong>
  <%= @test.title %>
</p>

<p>
  <strong>Level:</strong>
  <%= @test.level %>
</p>

<h2>Questions for <%= @test.title %></h2>

<div class="questions-list">
  <% if @test.questions.any? %>
    <ul>
      <%= render @test.questions %>
    </ul>
  <% else %>
    <p>No questions yet.</p>
  <% end %>
</div>

<div class="actions">
  <%= button_to "Add a new question", new_test_question_path(@test), method: :get, class: "btn btn-primary" %>
  <%= button_to "Edit title", edit_test_path(@test), method: :get, class: "btn btn-secondary" %>
  <%= button_to "Back to Tests", tests_path, method: :get, class: "btn btn-link" %>
</div>
