<div class="container mt-4">
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
      <h1 class="h3 mb-0"><%= @test.title %></h1>
    </div>
    
    <div class="card-body">
      <div class="row mb-4">
        <div class="col-md-4">
          <div class="card bg-light h-100">
            <div class="card-body text-center">
              <h5 class="card-title"><%= t('.level') %></h5>
              <span class="badge bg-<%= @test.level > 2 ? 'danger' : (@test.level > 0 ? 'warning' : 'success') %> fs-5"><%= @test.level %></span>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card bg-light h-100">
            <div class="card-body text-center">
              <h5 class="card-title"><%= t('.category') %></h5>
              <span class="badge bg-info text-dark fs-5"><%= @test.category.name %></span>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card bg-light h-100">
            <div class="card-body text-center">
              <h5 class="card-title"><%= t('.author') %></h5>
              <p class="mb-0"><%= @test.author.email %></p>
            </div>
          </div>
        </div>
      </div>
      
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4 border-bottom pb-2 mb-0"><%= t('.questions') %></h2>
      </div>
      
      <% if @test.questions.any? %>
        <div class="list-group mb-4">
          <% @test.questions.each do |question| %>
            <div class="list-group-item">
              <div class="d-flex align-items-center">
                <i class="bi bi-question-circle me-2 text-primary"></i>
                <span><%= question.content %></span>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="alert alert-info">
          <i class="bi bi-info-circle me-2"></i> <%= t('.no_questions') %>
        </div>
      <% end %>
    </div>
    
    <div class="card-footer bg-light d-flex justify-content-between align-items-center">
      <%= link_to tests_path_for_user(current_user), class: "btn btn-secondary" do %>
        <i class="bi bi-arrow-left me-1"></i> <%= t(".back") %>
      <% end %>
    </div>
  </div>
</div>