<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 mb-0">
      <i class="bi bi-award text-primary me-2"></i>Ваши бейджи
    </h1>
  </div>

  <% if @user_badges.any? %>
    <div class="row">
      <%= render @user_badges %>
    </div>
  <% else %>
    <div class="card shadow-sm">
      <div class="card-body text-center py-5">
        <i class="bi bi-emoji-smile display-1 text-muted mb-3"></i>
        <h3 class="h4 text-muted">У вас пока нет бейджей</h3>
        <p class="text-muted mb-4">Проходите тесты успешно, чтобы получить бейджи!</p>
        <%= link_to tests_path, class: "btn btn-primary" do %>
          <i class="bi bi-play-fill me-1"></i>Перейти к тестам
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<style>
.grayscale {
  filter: grayscale(100%);
}
</style> 
