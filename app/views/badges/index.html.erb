<div class="container mt-4">
  <h1 class="mb-4">Мои бейджи</h1>

  <div class="mb-5">
    <h2 class="mb-3">Полученные бейджи</h2>
    <div class="row">
      <% @user_badges.each do |badge| %>
        <div class="col-md-4 col-lg-3 mb-4">
          <div class="card">
            <div class="card-body text-center">
              <img src="<%= badge.image_url %>" alt="<%= badge.name %>" class="img-fluid mb-3" style="max-width: 100px;">
              <h5 class="card-title"><%= badge.name %></h5>
              <p class="card-text text-muted"><%= badge.rule_type %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div>
    <h2 class="mb-3">Доступные бейджи</h2>
    <div class="row">
      <% (@badges - @user_badges).each do |badge| %>
        <div class="col-md-4 col-lg-3 mb-4">
          <div class="card opacity-50">
            <div class="card-body text-center">
              <img src="<%= badge.image_url %>" alt="<%= badge.name %>" class="img-fluid mb-3 grayscale" style="max-width: 100px;">
              <h5 class="card-title"><%= badge.name %></h5>
              <p class="card-text text-muted"><%= badge.rule_type %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
.grayscale {
  filter: grayscale(100%);
}
</style> 