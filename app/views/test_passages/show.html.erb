<div class="container mt-4">
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
      <h1 class="h3 mb-0"><%= t('.header', title: @test_passage.test.title) %></h1>
    </div>
    
    <div class="card-body">
      <% if flash[:alert] %>
        <div class="alert alert-danger alert-dismissible fade show">
          <i class="bi bi-exclamation-triangle-fill me-2"></i>
          <%= flash[:alert] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>
      
      <% if @test_passage.current_question.present? %>
        <div class="mb-4">
          <% question_index = @test_passage.test.questions.index(@test_passage.current_question) %>
          <% current_question_number = question_index.nil? ? 0 : question_index + 1 %>
          <% total_questions = @test_passage.test.questions.count %>
          <% progress_percentage = total_questions > 0 ? (current_question_number.to_f / total_questions * 100) : 0 %>
          
          <div class="d-flex justify-content-between align-items-center mb-2">
            <span class="badge bg-primary fs-6">
              <%= t('.question_count', current: current_question_number, total: total_questions) %>
            </span>
            <span class="text-muted" id="progress-percent" data-progress-percent="<%= progress_percentage %>">
              <%= progress_percentage %>% <%= t('.completed') %>
            </span>
          </div>
          
          <% if @test_passage.test.questions.any? %>
            <div class="progress" style="height: 10px;" id="progress-container" data-total-questions="<%= total_questions %>" data-current-question="<%= current_question_number %>">
              <div class="progress-bar bg-success" id="progress-bar" role="progressbar" style="width: <%= progress_percentage %>%" 
                  aria-valuenow="<%= progress_percentage %>" aria-valuemin="0" aria-valuemax="100"
                  data-progress-value="<%= progress_percentage %>"></div>
            </div>
          <% end %>
        </div>
        
        <div class="card mb-4">
          <div class="card-header bg-light">
            <h2 class="h5 mb-0"><%= @test_passage.current_question.content %></h2>
          </div>
          <div class="card-body">
            <% if @test_passage.test.timer_minutes %>
              <div class="alert alert-info" id="timer" data-time-left="<%= @test_passage.time_left %>">
                Time remaining: <span id="timer-display"></span>
              </div>
            <% end %>
            <%= form_with url: test_passage_path(@test_passage), method: :put, data: { turbo: false } do |form| %>
              <div class="list-group mb-4">
                <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :content, include_hidden: false do |b| %>
                  <div class="list-group-item">
                    <div class="form-check">
                      <%= b.check_box id: "answer_ids_#{b.object.id}", class: 'form-check-input' %>
                      <%= b.label class: 'form-check-label' %>
                    </div>
                  </div>
                <% end %>
              </div>
              
              <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <%= form.submit t('.next'), class: 'btn btn-primary' %>
              </div>
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="alert alert-info">
          <i class="bi bi-info-circle me-2"></i> <%= t('.no_questions') %>
        </div>
      <% end %>
      <p><%= button_to 'Gist Question', test_passage_gists_path(@test_passage), class: 'btn btn-primary' %></p>
    </div>
  </div>
</div>

<% content_for :javascript do %>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const timerElement = document.getElementById('timer');
      if (!timerElement) return;

      let timeLeft = parseInt(timerElement.dataset.timeLeft);
      const timerDisplay = document.getElementById('timer-display');

      function updateTimer() {
        if (timeLeft <= 0) {
          window.location.href = '<%= result_test_passage_path(@test_passage) %>';
          return;
        }

        const minutes = Math.floor(timeLeft / 60);
        const seconds = timeLeft % 60;
        timerDisplay.textContent = `${minutes}:${seconds.toString().padStart(2, '0')}`;
        timeLeft--;
      }

      updateTimer();
      setInterval(updateTimer, 1000);
    });
  </script>
<% end %>
