<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
          <h2 class="h3 mb-0"><%= t(".change_your_password") %></h2>
        </div>
        
        <div class="card-body p-4">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "shared/errors", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="mb-3">
              <%= f.label :password, t(".new_password"), class: "form-label" %>
              <% if @minimum_password_length %>
                <div class="form-text mb-2"><%= t("devise.shared.minimum_password_length", count: @minimum_password_length) %></div>
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="mb-4">
              <%= f.label :password_confirmation, t(".confirm_new_password"), class: "form-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="d-grid gap-2">
              <%= f.submit t(".change_my_password"), class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
        
        <div class="card-footer bg-light">
          <div class="d-flex flex-column align-items-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
