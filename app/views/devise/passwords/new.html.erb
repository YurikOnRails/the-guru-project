<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
          <h2 class="h3 mb-0"><%= t("devise.passwords.new.forgot_your_password") %></h2>
        </div>
        
        <div class="card-body p-4">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "shared/errors", resource: resource %>

            <div class="mb-4">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "user@example.com" %>
              <div class="form-text"><%= t("devise.passwords.new.instruction") %></div>
            </div>

            <div class="d-grid gap-2">
              <%= f.submit t("devise.passwords.new.send_instructions"), class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
        
        <div class="card-footer bg-light">
          <div class="d-flex flex-column align-items-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
