<div class="auth-links mt-3">
  <%- if controller_name != 'sessions' %>
    <%= link_to new_session_path(resource_name), class: 'btn btn-outline-primary mb-2' do %>
      <i class="bi bi-box-arrow-in-right me-1"></i> <%= t('devise.shared.links.log_in') %>
    <% end %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to new_registration_path(resource_name), class: 'btn btn-outline-success mb-2' do %>
      <i class="bi bi-person-plus me-1"></i> <%= t('devise.shared.links.sign_up') %>
    <% end %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to new_password_path(resource_name), class: 'text-decoration-none mb-2 d-block' do %>
      <i class="bi bi-key me-1"></i> <%= t('devise.shared.links.forgot_password') %>
    <% end %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to new_confirmation_path(resource_name), class: 'text-decoration-none mb-2 d-block' do %>
      <i class="bi bi-envelope me-1"></i> <%= t('devise.shared.links.confirmation_instructions') %>
    <% end %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to new_unlock_path(resource_name), class: 'text-decoration-none mb-2 d-block' do %>
      <i class="bi bi-unlock me-1"></i> <%= t('devise.shared.links.unlock_instructions') %>
    <% end %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <div class="mt-3">
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= button_to omniauth_authorize_path(resource_name, provider), class: 'btn btn-outline-dark mb-2', data: { turbo: false } do %>
          <i class="bi bi-<%= provider.to_s == 'github' ? 'github' : (provider.to_s == 'google_oauth2' ? 'google' : provider.to_s) %> me-1"></i>
          <%= t('devise.shared.links.sign_in_with', provider: OmniAuth::Utils.camelize(provider)) %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
