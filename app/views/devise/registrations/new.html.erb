<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">
            <span class="text-primary fw-bold" style="font-size: 1.5rem; text-transform: uppercase; letter-spacing: 1px; text-shadow: 2px 2px 4px rgba(0,0,0,0.1);">
              <i class="bi bi-mortarboard-fill me-2"></i><%= t(".header") %>
            </span>
          </h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
              data: { controller: "password-validation" }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-3">
              <%= f.label :first_name, class: "form-label" %>
              <%= f.text_field :first_name, autofocus: true, required: true, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :last_name, class: "form-label" %>
              <%= f.text_field :last_name, required: true, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, autocomplete: "email", required: true, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, class: "form-label" %>
              <% if @minimum_password_length %>
                <small class="form-text text-muted" data-password-validation-target="hint">
                  (<%= t(".characters_minimum", length: @minimum_password_length) %>)
                </small>
              <% end %>
              <%= f.password_field :password, 
                  autocomplete: "new-password", 
                  required: true,
                  minlength: @minimum_password_length,
                  class: "form-control",
                  data: { 
                    password_validation_target: "password",
                    action: "input->password-validation#validatePasswords"
                  } %>
            </div>

            <div class="mb-3">
              <div class="d-flex align-items-center gap-2">
                <%= f.label :password_confirmation, class: "form-label mb-0" %>
                <div data-password-validation-target="icon"></div>
              </div>
              <%= f.password_field :password_confirmation, 
                  autocomplete: "new-password", 
                  required: true,
                  minlength: @minimum_password_length,
                  class: "form-control",
                  data: { 
                    password_validation_target: "confirmation",
                    action: "input->password-validation#validatePasswords"
                  } %>
            </div>

            <div class="d-grid">
              <%= f.submit t(".sign_up"), class: "btn btn-primary" %>
            </div>
          <% end %>

          <div class="mt-3 text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
