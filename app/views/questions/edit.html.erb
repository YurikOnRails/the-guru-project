<h1>Edit Question</h1>

<%= render 'shared/errors', resource: @question %>

<%= form_with model: [@test, @question], local: true do |f| %>
  <div>
    <%= f.label :content %>
    <%= f.text_area :content, rows: 7, cols: 60 %>
  </div>

  <div>
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= link_to 'Back to Test', @test %>
