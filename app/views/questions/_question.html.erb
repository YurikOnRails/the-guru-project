<li>
  <%= question.content %>
  
  <div>
    <%= link_to "Add answer", new_question_answer_path(question) %>
    <%= link_to "Edit", edit_question_path(question) %>
    <%= button_to "Delete", question_path(question), method: :delete, data: { confirm: "Are you sure?" } %>
  </div>

  <% if question.answers.any? %>
    <ol>
      <% question.answers.each do |answer| %>
        <li>
          <%= answer.content %>
          <%= answer.correct? ? "✓" : "✗" %>
          <%= link_to "Edit", edit_answer_path(answer) %>
          <%= button_to "Delete", answer_path(answer), method: :delete, data: { confirm: "Are you sure?" } %>
        </li>
      <% end %>
    </ol>
  <% else %>
    <p>No answers yet.</p>
  <% end %>
</li>
